<h1>Openings</h1>

<% if current_user.admin==true %>
  <% @myOpenings=@openings.where(:userid => current_user.id) %>
<% else %>
  <% @myOpenings=@openings %>
<% end %>


<ul>
  <% @myOpenings.each do |opening| %>
    <li>
        <%=link_to opening.title,opening%>
    </li>
  <% end %> 
</ul>

<% if current_user.admin? %>
<%= link_to "New Opening", new_opening_path %>
<% end %>