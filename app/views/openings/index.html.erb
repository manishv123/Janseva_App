<h1>Openings</h1>

<% if current_user.admin==true %>
  <% @myOpenings=@openings.where(:userid => current_user.id) %>
<% else %>
  <% @myOpenings=@openings %>
<% end %>


<ul class="list-group">
  <% @myOpenings.each do |opening| %>
    <li class="list-group-item list-group-item-success">
        <%=link_to opening.title,opening%>
    </li>
  <% end %> 
</ul>
<br><br>
<% if current_user.admin? %>
<button type="button" class="btn btn-outline-info"><%= link_to "New Opening", new_opening_path %></button>
<% end %>