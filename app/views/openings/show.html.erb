<ul>
  <li><%= link_to "Edit", edit_opening_path(@opening) %></li>
</ul>

<ul>
  <li><%= link_to "Delete", opening_path(@opening), 
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
<% end %>

