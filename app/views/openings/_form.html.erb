<%= form_with model: @opening do |form| %>
    <div class="mb-3">
      <%= form.label :title ,class:"form-label"%><br>
      <%= form.text_field :title,class:"form-control",style:"width:300px"%>
    </div>
    <div class="mb-3">
      <%= form.label :description,class:"form-label" %><br>
      <%= form.text_area :description,class:"form-control",style:"width:300px" %>
    </div>
    <div class="mb-3">
      <%= form.label :vacancy,class:"form-label" %><br>
      <%= form.text_field :vacancy,class:"form-control",style:"width:300px" %>
    </div>
    <div class="actions">
      <%= form.submit class:"btn btn-dark"%>
    </div>
  <% end %>